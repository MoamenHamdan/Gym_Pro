rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data, admins can read all
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      
      // Users can create/update their own profile, admins can update any
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow delete: if isAdmin();
      
      // Progress subcollection
      match /progress/{videoId} {
        // Users can read/write their own progress
        allow read, write: if isAuthenticated() && isOwner(userId);
        // Admins can read and write (delete) all progress
        allow read, write: if isAdmin();
      }
    }
    
    // Programs collection
    match /programs/{programId} {
      // Everyone can read programs
      allow read: if true;
      // Only admins can create/update/delete programs
      allow write: if isAdmin();
    }
    
    // Videos collection
    match /videos/{videoId} {
      // Authenticated users can read published videos
      allow read: if isAuthenticated();
      // Only admins can create/update/delete videos
      allow write: if isAdmin();
      
      // Chunks subcollection for large videos
      match /chunks/{chunkId} {
        // Authenticated users can read chunks
        allow read: if isAuthenticated();
        // Only admins can create/update/delete chunks
        allow write: if isAdmin();
      }
    }
    
    // Purchases collection
    match /purchases/{purchaseId} {
      // Users can read their own purchases
      allow read: if isAuthenticated() && 
                     resource.data.uid == request.auth.uid;
      // Admins can read all purchases
      allow read: if isAdmin();
      // Only admins can write purchases (or use Cloud Functions)
      allow write: if isAdmin();
    }
    
    // Roles collection (optional, for admin management)
    match /roles/{userId} {
      // Only admins can read/write roles
      allow read, write: if isAdmin();
    }
    
    // Coaches collection
    match /coaches/{coachId} {
      // Everyone can read coaches
      allow read: if true;
      // Only admins can create/update/delete coaches
      allow write: if isAdmin();
    }
    
    // Feedback collection
    match /feedback/{feedbackId} {
      // Everyone can read feedback
      allow read: if true;
      // Authenticated users can create feedback
      allow create: if isAuthenticated();
      // Users can update their own feedback, admins can update any
      allow update: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      // Users can delete their own feedback, admins can delete any
      allow delete: if isAuthenticated() && 
                      (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Events collection
    match /events/{eventId} {
      // Everyone can read events
      allow read: if true;
      // Only admins can create/update/delete events
      allow write: if isAdmin();
    }
    
    // Groups collection
    match /groups/{groupId} {
      // Everyone can read groups
      allow read: if true;
      // Authenticated users can create groups
      allow create: if isAuthenticated();
      // Group creator or admins can update
      allow update: if isAuthenticated() && 
                     (resource.data.createdBy == request.auth.uid || isAdmin());
      // Group creator or admins can delete
      allow delete: if isAuthenticated() && 
                      (resource.data.createdBy == request.auth.uid || isAdmin());
      
      // Members subcollection
      match /members/{memberId} {
        // Everyone can read members
        allow read: if true;
        // Authenticated users can join/leave groups
        allow write: if isAuthenticated();
      }
    }
    
    // Competitions collection
    match /competitions/{competitionId} {
      // Everyone can read competitions
      allow read: if true;
      // Only admins can create/update/delete competitions
      allow write: if isAdmin();
    }
    
    // WhyJoinUs collection
    match /whyJoinUs/{itemId} {
      // Everyone can read whyJoinUs items
      allow read: if true;
      // Only admins can create/update/delete
      allow write: if isAdmin();
    }
    
    // Messages collection
    match /messages/{messageId} {
      // Authenticated users can create messages (contact form)
      // Note: Users need to be logged in to send messages
      allow create: if isAuthenticated();
      // Only admins can read messages
      allow read: if isAdmin();
      // Only admins can update/delete messages
      allow update, delete: if isAdmin();
    }
  }
}

